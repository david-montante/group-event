<section>
  <h1 class="h1">Active Events</h1>
  <div>
    <%= link_to new_group_event_path, class:"btn btn-success float-right" do %>
      New
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Duration</th>
          <th>Published</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.location %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= event.duration %></td>
            <td><%= event.published %></td>
            <td>
              <%= button_to  "Delete", event, :method => :delete, 
                  class:"btn btn-danger"  %>
            </td>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
