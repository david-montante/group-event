<h1 class="h1">
    Event #<%= "#{@group_event.id}"%>
    (<%= "#{@group_event.published ? 'published' : 'draft'}"%>)
</h1>
<%= form_for @group_event do |f| %>
  <fieldset class="form-group">
    <label>Name:</label>
    <%= f.text_field :name, { class:"form-control col-md-6", :required => true, 
                              maxlength: 100 } %>
  </fieldset>
  <fieldset class="form-group">
    <label>Location:</label>
    <%= f.text_field :location, { class:"form-control col-md-6", 
                                  maxlength: 100 } %>
  </fieldset>
  <fieldset class="form-group">
    <label>Start Date:</label>
    <%= f.date_field :start_date, { class:"form-control col-md-6" } %>
  </fieldset>
  <fieldset class="form-group">
    <label>End Date:</label>
    <%= f.date_field :end_date, { class:"form-control col-md-6" } %>
  </fieldset>
  <fieldset class="form-group">
    <label>Duration:</label>
    <%= f.number_field :duration, 
        { class:"form-control col-md-6", min: 1, max: 365 } %>
  </fieldset>
  <fieldset class="form-group">
    <label>Do you want to publish?</label>
    <%= f.select(:published,
         options_for_select([["Yes", true],
                             ["No", false]], @group_event.published),
                             { include_blank: "Select an option" },
                             { class:"form-control col-md-6",
                               required: true })  %>
  </fieldset>
  <div>
    <%= f.submit "Update", class:"btn btn-success" %>
  </div>
<% end %>
